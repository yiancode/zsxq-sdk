# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=zsxq_api
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
THROTTLE_LIMIT_OWNER=200

# ZSXQ API
ZSXQ_API_BASE_URL=https://api.zsxq.com
ZSXQ_API_TIMEOUT=30000
ZSXQ_API_RETRY_COUNT=3
ZSXQ_API_RETRY_DELAY=1000

# Cache
CACHE_TTL_PLANET=3600
CACHE_TTL_TOPIC=300
CACHE_TTL_USER_PERMISSION=1800

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs
LOG_MAX_FILES=14d

# Swagger
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs
